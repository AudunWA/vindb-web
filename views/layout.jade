doctype html
html
  head
    // Import Google Icon Font
    link(href='http://fonts.googleapis.com/icon?family=Material+Icons', rel='stylesheet')

    link(type='text/css', rel='stylesheet', href='/stylesheets/materialize.css', media='screen,projection')
    link(type='text/css', rel='stylesheet', href='/stylesheets/jquery.mobile.custom.structure.css', media='screen,projection')
    link(type='text/css', rel='stylesheet', href='/stylesheets/vindb.css', media='screen,projection')
   
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(charset='UTF-8')
  body
    // Import jQuery before materialize.js
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(type='text/javascript', src='/javascripts/jquery.mobile.custom.js')
    script(type='text/javascript', src='/javascripts/jquery.query-object.js')
    script(type='text/javascript', src='/javascripts/materialize.js')
    script(type='text/javascript', src='/javascripts/vindb.js')
    // Dropdown Structure
    ul#dropdown1.dropdown-content
      each val in [{ label: 'Billigste Alkohol/kr', href: '/products?order_by=epk&desc=1'}, { label: 'Dyreste Alkohol/kr', href: '/products?order_by=epk'}]
        li 
           a(href='#{val.href}')= val.label
    div
     div
       nav
        .nav-wrapper
            //a.brand-logo.right(href='#!') Logo
            ul.left.hide-on-med-and-down
              li
                a(href='/') Hjem
                  i.material-icons.left home
              li
                a(href='/products') Varer
                  i.material-icons.left local_drink
              li
                a(href='/history') Endringer
                  i.material-icons.left update
              // Dropdown Trigger
              li
                a.dropdown-button(href='#!', data-activates='dropdown1') Topplister
                  i.material-icons.right arrow_drop_down
                  i.material-icons.left sort
            a.button-collapse(href='#', data-activates='side-menu')
             i.material-icons menu
                 
            ul#side-menu.side-nav
             li.bold
              a.waves-effect(href='/') Hjem
               i.material-icons.left home
             li.bold
              a.waves-effect(href='/products') Varer
               i.material-icons.left local_drink
             li.bold
              a.waves-effect(href='/history') Endringer
               i.material-icons.left update
             li.bold.no-padding
              ul.collapsible.collapsible-accordion
               li
                a.waves-effect.collapsible-header Topplister
                 i.material-icons.left sort
                .collapsible-body
                 ul
                  each val in [{ label: 'Billigste Alkohol/kr', href: '/products?order_by=epk&desc=1'}, { label: 'Dyreste Alkohol/kr', href: '/products?order_by=epk'}]
                   li 
                    a(href='#{val.href}')= val.label
     block nav       
    .container
     block content
    