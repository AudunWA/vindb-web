extends layout

block content
  ul.pagination
    li.disabled
      a(href='#!')
      i.material-icons chevron_left
    li.active
      a(href='#!') 1
    if(pageCount < 10)
      - for (var i = 2; i <= pageCount; i++) {
        li.waves-effect
          a(href='#!')= i
      - }
    else
      - for (var i = 2; i <= 3; i++) {
        li.waves-effect
          a(href='#!')= i
      - }
      li.waves-effect
       | ...
      - for (var i = pageCount - 2; i <= pageCount; i++) {
        li.waves-effect
          a(href='#!')= i
      - }
    li.waves-effect
      a(href='#!')
      i.material-icons chevron_right
  table.ui-responsive.bordered.highlight(data-role='table', data-mode='columntoggle')
   thead
    tr
      th(data-field='id', data-priority='4') Varenummer
      th(data-field='name', data-priority='7') Varenavn
      th(data-field='price', data-priority='2') Pris
      th(data-field='liter_price', data-priority='3') Literspris
      th(data-field='ethanol_per_krone', data-priority='1') EPK
      th(data-field='first_seen', data-priority='5') FÃ¸rst sett
      th(data-field='last_seen', data-priority='6') Sist sett
   tbody
    each product in products
      tr.clickable-row(data-href='/product/#{product.varenummer}')
       td= product.varenummer
       td= product.varenavn
       td= product.pris + ',-'
       td= product.literspris.toFixed(2) + ',-'
       td= product.epk.toFixed(2) + ' mikroliter'
       td= format.asString('dd.MM.yyyy', product.first_seen)
       td= format.asString('dd.MM.yyyy', product.last_seen)