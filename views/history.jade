extends layout

block content
  .row
   br
   .input-field.col.s6
    input.datepicker#start_date(type='date')
    label(for='start_date') Startdato
   .input-field.col.s6
    input.datepicker#end_date(type='date')
    label(for='end_date') Sluttdato
  .row
   a.waves-effect.waves-light.btn#update_date_button(href='#!') Oppdater
  .row
    h4 Historie
    table.ui-responsive.bordered.striped(data-role='table', data-mode='reflow')
     thead
      tr
       th(data-field='id') Varenummer
       th(data-field='name') Varenavn
       th(data-field='changed_field') Felt
       th(data-field='old_value') Gammel verdi
       th(data-field='new_value') Ny verdi
       th(data-field='time') Tid endret
     tbody
      each change in changes
       tr.clickable-row(data-href='/product/#{change.product_id}')
        td= change.product_id
        td= change.varenavn
        td= change.display_name
        td= change.old_value
        td= change.new_value
        td= format.asString('dd.MM.yyyy', change.time)